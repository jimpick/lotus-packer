{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-west-2",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "instance_type": "c5.2xlarge",
      "ssh_username": "ubuntu",
      "ami_name": "lotus-node-and-miner {{timestamp}}",
      "run_tags": {
        "Team": "filecoin",
        "Project": "lotusjsclient"
      },
      "run_volume_tags": {
        "Team": "filecoin",
        "Project": "lotusjsclient"
      },
      "tags": {
        "Team": "filecoin",
        "Project": "lotusjsclient"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo apt-get update",
        "sudo apt-get install -y build-essential",
        "wget https://dl.google.com/go/go1.14.4.linux-amd64.tar.gz",
        "sudo tar -C /usr/local -xzf go1.14.4.linux-amd64.tar.gz",
        "ls -lh /usr/local/go/bin",
        "rm go1.14.4.linux-amd64.tar.gz",
        "echo 'export PATH=$PATH:/usr/local/go/bin' | sudo tee -a /etc/profile",
        "sudo apt-get install -y apt-transport-https gnupg-agent",
        "sudo apt-get install -y jq",
        "sudo apt-get install -y nload",
        "sudo apt-get install -y mosh",
        "sudo apt-get install -y ca-certificates llvm clang mesa-opencl-icd ocl-icd-opencl-dev",
        "sudo apt-get install -y vim less pkg-config",
        "curl -sSf https://sh.rustup.rs | sh -s -- -y",
        "git clone https://github.com/filecoin-project/lotus.git",
        "cd lotus",
        "git checkout interop.6.16.0",
        "export PATH=$PATH:/usr/local/go/bin",
        "make all",
        "echo >> .bashrc",
        "echo 'ulimit -Sn 10240' >> .bashrc",
        "mkdir ~/tmp"
      ]
    }
  ]
}
